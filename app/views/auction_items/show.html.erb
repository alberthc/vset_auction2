<% provide(:title, @auction_item.name) %>

<p>Minimum bid: <%= @auction_item.min_bid %></p>
<p>Minimum increment: <%= @auction_item.min_incr %></p>
<p>Current max bid: <%= @max_bid != nil ? @max_bid.amount : 0 %> </p>

<div class="row"> 
  <div class="span6 offset3">     
    <%= form_for(@bid) do |f| %>
      <%= render 'shared/bid_error_messages' %>
 
      <%= f.hidden_field :auction_item_id, value: @auction_item.id %>
 
      <%= f.label :amount %>
      <%= f.text_field :amount %>

      <%= fields_for(@comment) do |c| %>

      <%= c.label :content, 'Comment:' %>
      <%= c.text_area :content %>

      <% end %>

      <%= f.submit "Submit bid", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<div class = "row">
  <ol class="comments">
  <% if !@comments.nil? %>
    <% for comment in @comments %>
      <li> 
	<span class="user-name-comment"><%= comment.user.name %> says:</span>
	<span class="content"><%= comment.content %></span>
	<span class="timestamp">
	  Posted <%= time_ago_in_words(comment.created_at) %> ago.
	</span>
	<span class="delete-comment">
	  <% if current_user.admin? || current_user == comment.user %>
	    <%= link_to "delete comment", comment, method: :delete,
                                  data: { confirm: "You sure?" } %>
	  <% end %>
	</span>
      </li>
    <% end %>
  <% end %> 
  </ol>
</div>
