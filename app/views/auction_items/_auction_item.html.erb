<tr style="height:100px; overflow:hidden;">
<td>
  <%= link_to image_tag(auction_item.image.url(:thumb)), auction_item, title: auction_item.name, data: {caption: auction_item.name}%>
  <p style="text-align: center;"><%= auction_item.name %></p>
</td>
<td>
  <%= auction_item.user.name %>
</td>
<td>
  <%= auction_item.bids.count %>
</td>
<td>
  $<%= auction_item.max_bid.nil? ? "0" : auction_item.max_bid %>
</td>
<td>
  <%= auction_item.bids.first.nil? ? "" : auction_item.bids.last.user.name %>
</td>
<td>  
  <% if current_user == auction_item.user %>
    | <%= link_to "edit", edit_auction_item_path(auction_item) %>
  <% end %>
  <% if current_user.admin? %>
    | <%= link_to "delete", auction_item, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</td>
</tr>
