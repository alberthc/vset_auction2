<% provide(:title, 'Auction Items') %>
<h1>Auction Items</h1>

<div class="span2">
  <%= render 'shared/category_menu' %>
</div>

<div class="span9">
  <%= will_paginate %>
  
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Item</td>
        <td>Offered by</td>
        <td># of bids</td>
        <td>Current bid</td>
        <td>Bidder</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
    <% if !@auction_items.nil? %>
      <% @auction_items.each do |auction_item| %>
        <%= render 'auction_item', auction_item: auction_item %>
      <% end %>
    <% end %>
    </tbody>
  </table>   
    
  <%= will_paginate %>
</div>
