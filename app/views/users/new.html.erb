<% provide(:title, 'Sign Up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= fields_for(@user_info) do |ui| %>

      <br/>
      <%= ui.label :school, 'School' %>
      <%= ui.select :school, [[UserInfo::USC, UserInfo::USC], [UserInfo::UCLA, UserInfo::UCLA],
        [UserInfo::UCI, UserInfo::UCI], [UserInfo::OTHER, UserInfo::OTHER]] %>

      <% end %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
